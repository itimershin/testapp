pipeline {
    agent any

    stages {
        stage('Build docker image. Run tests and build app.') {
            steps {
                git 'https://github.com/itimershin/testapp'
                sh 'sudo docker build . -t reactnginx'
            }
        }
	stage('Run stage'){
	steps {
		sh 'docker run -d -p 80:80 reactnginx'
	    }
	}
    }
}
